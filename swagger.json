                        "user_join_date": "2018-03-27T08:38:28.000Z"
                    },
                    {
                        "user_id": 2,
                        "user_email": "obi_wan@theforce.com",
                        "user_password": "e10adc3949ba59abbe56e057f20f883e",
                        "user_join_date": "2018-03-27T08:59:28.000Z"
                    }
                ]
            }
        },
        "Status": {
            "required": [
                "userId",
                "status"
            ],
            "properties": {
                "userId": {
                    "type": "integer",
                    "uniqueItems": true
                },
                "status": {
                    "type": "string",
                    "uniqueItems": false
                }
            },
            "example": {
                "userId": "1",
                "Status": "Currently working for the Galactic Empire"
            }
        },
        "Status Response": {
            "properties": {
                "Message": {
                    "type": "string"
                }
            },
            "example": {
                "Message": "Status Added!"
            }
        },
        "Statuses List": {
            "properties": {
                "Message": {
                    "type": "string"
                },
                "Statuses": {
                    "type": "array",
                    "$ref": "#/definitions/Status Response"
                }
            },
            "example": {
                "Message": "Success",
                "Statuses": [{
                        "user_status_id": 1,
